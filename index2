    <script>
        // Добавляем интерактивность для кнопки "Перейти на карту"
        document.querySelector('.rsvp-button').addEventListener('click', function() {
            alert('Карта будет открыта в новом окне. В реальном приложении здесь будет ссылка на карту ресторана.');
            // В реальном приложении здесь будет window.open('ссылка_на_карту');
        });

        // Обработка формы
        function handleSubmit(event) {
            event.preventDefault();
            
            // Добавляем анимацию нажатия на кнопку
            const submitButton = event.target.querySelector('.submit-button');
            submitButton.style.transform = 'scale(0.95)';
            setTimeout(() => submitButton.style.transform = '', 200);

            const formData = {
                name: document.getElementById('name').value,
                phone: document.getElementById('phone').value,
                attendance: document.querySelector('input[name="attendance"]:checked').value,
                guests: document.getElementById('guests').value,
                wishes: document.getElementById('wishes').value
            };

            // Показываем сообщение об успешной отправке
            const responseMessage = document.getElementById('responseMessage');
            responseMessage.classList.add('active');

            // Очищаем форму
            setTimeout(() => {
                event.target.reset();
            }, 300);
        }

        function closeMessage() {
            const responseMessage = document.getElementById('responseMessage');
            responseMessage.classList.remove('active');
        }

        // Добавляем анимации для полей ввода
        document.querySelectorAll('.floating input, .floating textarea').forEach(input => {
            input.setAttribute('placeholder', ' '); // Пустой placeholder для работы эффекта
            
            input.addEventListener('focus', () => {
                input.parentElement.classList.add('focused');
            });
            
            input.addEventListener('blur', () => {
                input.parentElement.classList.remove('focused');
            });
        });

        // Обновляем индикаторы "сегодня", "завтра" и "навсегда"
        function updateDateIndicators() {
            const today = new Date();
            const indicators = document.querySelectorAll('.indicator');
            
            // Обновляем текст индикаторов
            indicators[0].textContent = 'СЕГОДНЯ: ' + formatDate(today);
            
            const tomorrow = new Date(today);
            tomorrow.setDate(tomorrow.getDate() + 1);
            indicators[1].textContent = 'ЗАВТРА: ' + formatDate(tomorrow);
            
            indicators[2].textContent = 'НАВСЕГДА: 02.12.2025';
        }

        function formatDate(date) {
            const day = date.getDate().toString().padStart(2, '0');
            const month = (date.getMonth() + 1).toString().padStart(2, '0');
            const year = date.getFullYear();
            return `${day}.${month}.${year}`;
        }

        // Вызываем функцию при загрузке страницы
        window.addEventListener('load', updateDateIndicators);
    </script>
